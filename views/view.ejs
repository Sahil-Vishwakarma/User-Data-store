<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <link rel="stylesheet" href=/stylesheets/styles.css">
        <script
            src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

    </head>
    <body>
        <div class="bg-zinc-900 w-full min-h-screen text-white p-10">
            <a class="text-2xl text-zinc-500" href="/">Back home</h1>
            <h1 class="text-2xl text-zinc-500">Users</h1>
            <div class="mt-10 flex gap-4 flex-wrap">
                <% if(users.length > 0 ) { %>
                <% users.forEach((val) => { %>
                <div class="bg-zinc-800 w-90 h-103 rounded-lg px-3 py-3">
                    <img class="w-full h-70"
                        src="<%=val.image%>" />
                    <div class="mt-3">
                        <h1 class="text-2xl tracking-tighter"><%=val.name%></h1>
                        <h1 class="tracking-tighter"><%=val.email%></h1>
                    </div>
                    <div class="flex mt-1">
                        <a class="text-blue-400 mr-10"
                            href="/edit/<%=val._id%>">Edit</a>
                        <a class="text-yellow-200"
                            href="/delete/<%=val._id%>">Delete</a>
                    </div>
                </div>
                <% })%>
                <% } else {%>
                <h1>No users yet</h1>
                <% } %>
            </div>
        </div>
    </body>
</html>